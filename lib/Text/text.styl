@import 'variables.styl'

.font
  &.display 
    font-weight 400
    font-size 4rem
    line-height 6rem

  &.headline
    font-weight 400
    font-size 2.5rem
    line-height 3.5rem

  &.title
    font-weight 400
    font-size 2.1rem
    line-height 3rem

  &.subtitle
    font-weight 400
    font-size 1.8rem
    line-height 3rem

  &.body
    font-weight 400
    font-size 1.5rem
    line-height 2.5rem

  &.caption
    font-weight 400
    font-size 1.3rem
    line-height 2rem

  &.footnote
    font-weight 400
    font-size 1rem
    line-height 1.5rem

  &.bold
    font-weight 700

  &.inherit
    color inherit

  &.primary
    color black

  &.alternate
    color $link-color
