@import 'variables.styl'

.font
  &.display 
    font-size: 4rem
    font-weight: 400
    line-height: 6rem

  &.headline
    font-size: 2.5rem
    font-weight: 400
    line-height: 3.5rem

  &.title
    font-size: 2.1rem
    font-weight: 400
    line-height: 3rem

  &.subtitle
    font-size: 1.8rem
    font-weight: 400
    line-height: 3rem

  &.body
    font-size: 1.5rem
    font-weight: 400
    line-height: 2.5rem

  &.caption
    font-size: 1.3rem
    font-weight: 400
    line-height: 2rem

  &.footnote
    font-size: 1rem
    font-weight: 400
    line-height: 1.5rem

  &.bold
    font-weight: 700

  &.inherit
    color: inherit

  &.primary
    color: black

  &.alternate
    color: $link-color
