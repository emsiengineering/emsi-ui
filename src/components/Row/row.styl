@import 'variables.styl'

$options = start center end top middle bottom around between

start()  
  justify-content: flex-start
  text-align: start

center()
  justify-content: center
  text-align: center

end()
  justify-content: flex-end
  text-align: end
  
top()
  align-items: flex-start

middle()
  align-items: center

bottom()
  align-items: flex-end

around()
  justify-content: space-around

between()
  justify-content: space-between

invoke(fn)
  fn()

.rows
  -moz-box-flex: 0
  -ms-box-flex: 0
  -webkit-box-flex: 0
  box-sizing: border-box
  display: flex
  flex: 0 1 auto
  flex-direction: row
  flex-wrap: wrap

  &.reverse
    flex-direction: row-reverse
  
  for type in $types
    @media only screen and (min-width: $viewport[type])
      for option, index in $options 
        &.{option}-{type}
          invoke(option)
